@model IntraNet.Models.Avisos

@{
    ViewData["Title"] = "Criar Aviso";
}

<h2>Criar Aviso</h2>

<form asp-action="Criar" method="post">
    <div class="mb-3">
        <label class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mensagem</label>
        <textarea asp-for="Mensagem" class="form-control"></textarea>
        <span asp-validation-for="Mensagem" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Setor (opcional)</label>
        <input asp-for="Setor" class="form-control" placeholder="Ex: Financeiro, NOC, Suporte" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
